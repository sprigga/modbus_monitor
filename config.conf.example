[modbus]
# Modbus TCP Connection Configuration
host = 192.168.30.24
port = 502
device_id = 1

[polling]
# Polling and Timeout Settings
poll_interval = 2.0
timeout = 3.0
retries = 3

[registers]
# Register Range Configuration
start_address = 1
end_address = 26

[logging]
# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
level = INFO

